# Design Assistant - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/design_assistant

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-this-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Allowed Origins (comma separated for multiple)
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Debug Mode
DEBUG=true

# Output Directory
OUTPUT_DIR=./outputs

# Optional: Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional: Email Configuration (for reports)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
