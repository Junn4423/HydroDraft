# ===================================
# HydroDraft Design Assistant - Environment Variables (Mẫu)
# ===================================
# Copy file này thành .env và chỉnh sửa các giá trị phù hợp

# Chế độ chạy
DEBUG=true
DEMO_MODE=true  # Đặt false để kết nối database thật

# Database MySQL (Laragon)
# Định dạng: mysql+aiomysql://username:password@host:port/database
# Nếu password rỗng: mysql+aiomysql://root:@127.0.0.1:3306/design_assistant
DATABASE_URL=mysql+aiomysql://root:your_password@127.0.0.1:3306/design_assistant

# Redis (cho Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS - Các domain được phép gọi API
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]

# Thư mục lưu trữ
OUTPUT_DIR=./outputs
TEMPLATE_DIR=./templates
TEMP_DIR=./temp

# Giới hạn
MAX_FILE_SIZE=104857600
MAX_CONCURRENT_JOBS=10
